#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# fail fast
set -e

NGINX_VERSION=1.4.4
PCRE_VERSION=8.21
PAGESPEED_VERSION=1.7.30.4-beta

nginx_tarball_url=http://nginx.org/download/nginx-${NGINX_VERSION}.tar.gz
pcre_tarball_url=http://garr.dl.sourceforge.net/project/pcre/pcre/${PCRE_VERSION}/pcre-${PCRE_VERSION}.tar.bz2
ps_tarball_url=https://s3-eu-west-1.amazonaws.com/ray-s3-test/nginx/ngx_pagespeed-release-${PAGESPEED_VERSION}.tgz

logger -p user.notice -t "slugc[$$]" "nnginx_build_pack nginx_install_start"

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path

# parse args
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

LOGGER_FLAGS=""

set -x

#create the dirs if needed
rm -rf ${CACHE_DIR}

mkdir -p ${CACHE_DIR}

rm -rf  ${BUILD_DIR}

mkdir -p ${BUILD_DIR}

# Default nginx install from our dist is in ./nginx-dist/usr/local/nginx

NGINX_CACHE_DIR=${CACHE_DIR}/nginx-${NGINX_VERSION}

if [ ! -d ${NGINX_CACHE_DIR} ]
then

(
	cd ${CACHE_DIR} &&
	pwd
	echo "Downloading $nginx_tarball_url"
	curl --silent -L ${nginx_tarball_url} | tar xz

	echo "Downloading $pcre_tarball_url"
	(cd nginx-${NGINX_VERSION} && curl --silent -L ${pcre_tarball_url} | tar xj )

	echo "Downloading $ps_tarball_url"
	curl --silent -L ${ps_tarball_url} | tar xz

	echo "Running configure for NGINX"
	cd nginx-${NGINX_VERSION}
	./configure \
		--with-pcre=pcre-${PCRE_VERSION} \
		--prefix=. \
		--add-module=../ngx_pagespeed-release-${PAGESPEED_VERSION} > /dev/null

	echo "Building NGINX"
	make > /dev/null

	echo "Installing NGINX"
	make install
)

fi

NGINX_BASE_DIR=${BUILD_DIR}/nginx-${NGINX_VERSION}

cp -R ${NGINX_CACHE_DIR} ${NGINX_BASE_DIR}

cp -R ${BIN_DIR}/../config ${BUILD_DIR}/config

cp ${BIN_DIR}/../scripts/start-nginx.sh ${BUILD_DIR}

BUILD_TARGET="$BUILD_DIR/.profile.d/nginx.sh"
mkdir -p $(dirname ${BUILD_TARGET})
echo "export NGINX_VERSION=nginx-${NGINX_VERSION}" > ${BUILD_TARGET}
echo 'export NGINX_BASE_DIR=~/${NGINX_VERSION}' >> ${BUILD_TARGET}
echo 'export PATH="$NGINX_BASE_DIR/sbin:$PATH"' >> ${BUILD_TARGET}

logger -p user.notice -t "slugc[$$]" "nnginx_build_pack nginx_install_end $LOGGER_FLAGS"
